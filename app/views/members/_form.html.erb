<%= form_for(@member) do |f| %>
<%= f.error_messages %>
  <div class="name-field">
   <h2> <%= f.label :name %></h2>
    <%= f.text_field :name %>
  </div>

  <div class="age-field">
    <h2><%= f.label :age %></h2>
    <%= f.number_field :age, min: 1, max: 130 %>
  </div>

 <div class="gender-field">
  <h2><%= f.label :gender %></h2>
    <%=f.select( :gender, options_for_select([["M", "Male"],["F","Female"]]))%>
  </div>

  <div class="allergy-field">
  <h2>  <%= f.label :allergy %></h2>
    <%=collection_check_boxes(:member, :allergy_ids, Allergy.order(:name), :id, :name, prompt: true)%>
  </div>

  <div class="diet-field">
   <h2> <%= f.label :diet %> </h2>
    <%=collection_check_boxes(:member, :diet_ids, Diet.order(:name), :id, :name, prompt: true)%>
  </div>

  <div class="excluded-field">
   <h2> <%= f.label :Excluded_Ingredients%></h2>
    <%= f.text_field :xingredlist %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>

<% if @member.name != nil %>
<%= link_to 'Remove Member', @member, method: :delete, data: { confirm: "Are you sure you want to remove #{@member.name} from your table?" } %>
<% end %>
</br>
<div class="back">
  <%= link_to "back to your family and guests", members_url %>
</div>